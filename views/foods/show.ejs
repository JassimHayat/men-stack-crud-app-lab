<!-- views/foods/show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <a href="/foods/">Back to Foods</a>

    <title><%= food.name %></title> <!-- Dynamic title based on food name -->
  </head>
  <body>
    <h1><%= food.name %></h1> <!-- Display food name -->
    <!-- Add more details about the food here -->

    <!-- Conditional rendering based on Foods readiness -->
    <% if (food.isReadyToEat) { %>
      <p>This food is ready to eat!</p>
    <% } else { %>
      <p>This food is NOT ready to eat!</p>
    <% } %>

    <!-- new delete button -->
<form action="/foods/<%=food._id%>?_method=DELETE" method="POST">
    <button type="submit">Delete <%= food.name %></button>
  </form>
  
  <!-- add edit page link here -->
<a href="/foods/<%= food._id %>/edit">Edit <%= food.name %></a>


  </body>
  
  </body>
</html>
